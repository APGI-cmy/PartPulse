// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  password     String?
  role         String   @default("technician") // technician | admin
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  internalTransfers InternalTransfer[]
  warrantyClaims    WarrantyClaim[]
  accounts          Account[]
  sessions          Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model InternalTransfer {
  id               String   @id @default(cuid())
  date             DateTime
  ssid             String?
  siteName         String?
  poNumber         String?
  technician       User      @relation(fields: [technicianId], references: [id])
  technicianId     String
  items            InternalTransferItem[]
  clientName       String?
  clientDate       DateTime?
  clientSignature  String?
  adminStamp       Boolean @default(false)
  adminSignature   String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model InternalTransferItem {
  id           String   @id @default(cuid())
  transfer     InternalTransfer @relation(fields: [transferId], references: [id], onDelete: Cascade)
  transferId   String
  qty          Int
  partNo       String
  description  String
}

model WarrantyClaim {
  id               String   @id @default(cuid())
  date             DateTime
  chillerModel     String?
  chillerSerial    String?
  ssidJobNumber    String?
  buildingName     String?
  siteName         String?
  technician       User      @relation(fields: [technicianId], references: [id])
  technicianId     String
  coveredByWarranty Boolean
  comments         String?
  items            WarrantyItem[]
  technicianSignature String?
  adminSignature   String?
  adminStamp       Boolean @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model WarrantyItem {
  id                   String   @id @default(cuid())
  claim                WarrantyClaim @relation(fields: [claimId], references: [id], onDelete: Cascade)
  claimId              String
  partNo               String
  quantity             Int
  failedPartSerial     String
  replacedPartSerial   String
  dateOfFailure        DateTime
  dateOfRepair         DateTime
}
