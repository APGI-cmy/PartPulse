# Database
DATABASE_URL="file:./dev.db"

# NextAuth (v5 uses AUTH_SECRET instead of NEXTAUTH_SECRET)
NEXTAUTH_URL="http://localhost:3000"
AUTH_SECRET="your-secret-here-replace-in-production-min-32-chars"

# Email Configuration
EMAIL_DOMAIN="example.com"
EMAIL_FROM="noreply@example.com"
ADMIN_EMAIL="admin@example.com"
RESEND_API_KEY="your-resend-api-key"

# Storage Configuration
# Options: 'local' or 's3'
STORAGE_PROVIDER="local"

# Local Storage (when STORAGE_PROVIDER=local)
# STORAGE_LOCAL_PATH="/custom/path/to/storage"
# STORAGE_LOCAL_PUBLIC_URL="/storage"

# S3 Storage (when STORAGE_PROVIDER=s3)
# STORAGE_S3_REGION="us-east-1"
# STORAGE_S3_BUCKET="partpulse-pdfs"
# STORAGE_S3_ACCESS_KEY_ID="your_access_key"
# STORAGE_S3_SECRET_ACCESS_KEY="your_secret_key"
# STORAGE_S3_PUBLIC_URL="https://cdn.example.com"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
PRIMARY_COLOR="#FF2B00"
