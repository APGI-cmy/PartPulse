---
# Yamllint configuration for agent contract markdown files
# Agent contracts: YAML frontmatter + markdown body
# NOTE: yamllint is not designed for mixed YAML+Markdown files
# This config makes yamllint maximally permissive for markdown content

extends: default

rules:
  # Line length: disable (markdown content can have long lines)
  line-length: disable

  # Document separators (---) are expected
  document-start: disable
  document-end: disable

  # Trailing spaces: disable (handled by git hooks)
  trailing-spaces: disable

  # Comments: allow flexible spacing
  comments: disable

  # Colons: flexible for markdown
  colons:
    max-spaces-before: 0
    max-spaces-after: -1  # No limit (for markdown)

  # Brackets: flexible
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: -1

  # Braces: flexible
  braces:
    min-spaces-inside: 0
    max-spaces-inside: -1

  # Indentation: flexible
  indentation: disable

  # Allow empty values
  empty-values: disable

  # Truthy: allow all values
  truthy: disable

  # Key duplicates: disable
  key-duplicates: disable

  # Empty lines: disable
  empty-lines: disable

  # New lines: disable
  new-lines: disable
  new-line-at-end-of-file: disable

  # Hyphens: disable
  hyphens: disable

  # Quoted strings: disable
  quoted-strings: disable

# Note: For proper YAML frontmatter validation, use validate_frontmatter.sh
# which extracts only the YAML portion and validates it properly
